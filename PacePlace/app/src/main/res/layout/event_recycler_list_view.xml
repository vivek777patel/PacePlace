<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom">

        <TextView
            android:id="@+id/list_item_event_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/login_padding"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/btn_txt_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/list_item_event_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_move_to_next"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/login_padding" />

    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/login_padding"
        android:fontFamily="serif"
        android:textColor="@color/colorListSmall" />

    <TextView
        android:id="@+id/list_item_event_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/login_padding"
        android:fontFamily="serif"
        android:textColor="@color/colorListSmall" />

    <TextView
        android:id="@+id/list_item__event_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/login_padding"
        android:fontFamily="serif"
        android:textColor="@color/colorListSmall" />

    <TextView
        android:id="@+id/list_item_event_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/login_padding"
        android:fontFamily="serif"
        android:textColor="@color/colorListSmall" />

    <TextView
        android:id="@+id/list_item_event_for_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/login_padding"
        android:fontFamily="serif"
        android:textColor="@color/colorListSmall" />


</LinearLayout>
