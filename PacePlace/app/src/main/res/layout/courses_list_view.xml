<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_course_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/login_padding"
            android:background="@drawable/border_bottom"
            android:fontFamily="serif"
            android:layout_toLeftOf="@+id/list_item_course_arrow"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/btn_txt_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/list_item_course_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/login_padding"
            android:paddingLeft="@dimen/login_padding"
            android:paddingBottom="@dimen/login_padding"
            android:background="@drawable/border_bottom"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/arrow_txt_size"
            android:textStyle="bold"
            android:text="@string/link_arrow"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_lec_course_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/login_padding"
        android:layout_marginRight="@dimen/login_padding"
        android:fontFamily="serif"
        android:textColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_lec_course_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/login_padding"
            android:layout_toStartOf="@+id/list_item_lec_course_prof_ratings"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/list_item_lec_course_prof_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/login_padding"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_lec_course_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_padding"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/list_item_lec_course_time"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/list_item_lec_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/login_padding"
            android:fontFamily="serif"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_lec_course_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/login_padding"
            android:layout_toStartOf="@+id/list_item_lec_course_room"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/list_item_lec_course_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/login_padding"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_padding">

        <TextView
            android:id="@+id/list_item_lec_course_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/login_padding"
            android:layout_toStartOf="@+id/list_item_lec_course_end_date"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/list_item_lec_course_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/login_padding"
            android:fontFamily="serif"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
